<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tag_bg"
    android:layout_marginTop="@dimen/common6dp"
    android:orientation="vertical">
    <TextView
        android:maxEms="6"
        android:ellipsize="end"
        android:lines="1"
        android:id="@+id/arer_select_tv"
        android:gravity="center"
        android:padding="@dimen/common5dp"
        android:layout_margin="@dimen/common5dp"
        android:textColor="@color/text_33"
        android:textSize="13sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/bg_f0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common1dp" />
</LinearLayout>